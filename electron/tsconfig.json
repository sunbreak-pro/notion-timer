{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["main.ts", "preload.ts", "types.ts", "windowState.ts", "menu.ts", "logger.ts", "updater.ts", "database/**/*.ts", "ipc/**/*.ts", "services/**/*.ts"]
}
